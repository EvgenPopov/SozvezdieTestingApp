@model TourInformation[]

<!Doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>

    <style>

        .scroll {
            max-height: 50px;
            overflow-y: auto;
        }

        .img-wrap {
            position: relative;
        }

            .img-wrap h4 {
                position: absolute;
                left: 10px;
                bottom: 10px;
                width: 70%;
                background-color: rgba(128, 128, 128, 0.5);
                color: ghostwhite; /* Цвет текста */
                padding: 2px;
            }

        a {
            text-decoration: none;
            color: ghostwhite;
        }

            a:hover {
                text-decoration: none;
                color: ghostwhite;
            }
    </style>

</head>
<body>
    <div id="scrolList">
        @Html.Partial("_tours")
    </div>


    @section scripts
    {
        <script type="text/javascript">
            $(function () {

                $('div#loading').hide();

                var page = 0;
                var _inCallback = false;
                function loadItems() {
                    if (page > -1 && !_inCallback) {
                        _inCallback = true;
                        page++;
                        $('div#loading').show();

                        $.ajax({
                            type: 'GET',
                            url: '/Tour/Index/' + page,
                            success: function (data, textstatus) {
                                if (data != '') {
                                    $("#scrolList").append(data);
                                }
                                else {
                                    page = -1;
                                }
                                _inCallback = false;
                                $("div#loading").hide();
                            }
                        });
                    }
                }
                $(window).scroll(function () {
                    if ($(window).scrollTop() == $(document).height() - $(window).height()) {

                        loadItems();
                    }
                });
            })
        </script>
    }

</body>
</html>