@model TourInformationModel[]

@for (int i = 0; i < Model.Length; i += 2)
{

    <div class="card-group">

        <div class="card bg-light">
            <div class="card">
                <a href="@Url.Action("SingleTour", "Tour", new {id = Model[i].id})">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="img-wrap">
                                @if (Model[i].photoCard == null)
                                {
                                    <img class="img-thumbnail" src="https://cdn.sozvezdie-tour.ru/images/uploadedfiles/tn_f4382f51-b16c-4cec-8b46-889052391a61.jpg" style="width:100%" alt="" />
                                }
                                else
                                {
                                 
                                    <img class="img-thumbnail" src=@Model[i].photoCard.thumbnail style="width:100%" alt="" /> 

                                     
                                }
                                <h4>@Model[i].title</h4>
                            </div>
                        </div>
                    </div>
                </a>
                
                <div class="card-body">


                    <div class="col-sm scroll">
                        <p>@Model[i].header</p>
                    </div>


                    <div>
                        <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#demo">Описание тура</button>
                        <div id="demo" class="collapse">
                            @Model[i].description
                        </div>
                    </div>
                </div>
                <div class="card-footer alert-light">
                    <div class="row">
                        <div class="col-6">
                            Дата начала : @Model[i].periodStart.ToShortDateString()
                        </div>

                        <div class="col-3">
                            <text class="text-nowrap">Цена от @Model[i].minPrice рублей</text>
                                
                        </div>
                        

                    </div>


                </div>
            </div>
        </div>




        <div class="card bg-light">
            <div class="card">
                <a href="@Url.Action("SingleTour", "Tour", new {id = Model[i+1].id})">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="img-wrap">
                                @if (Model[i + 1].photoCard == null)
                                {
                                    <img class="img-thumbnail" src="https://cdn.sozvezdie-tour.ru/images/uploadedfiles/tn_f4382f51-b16c-4cec-8b46-889052391a61.jpg" style="width:100%" alt="" />
                                }
                                else
                                {
                                    <img class="img-thumbnail" src=@Model[i+1].photoCard.thumbnail style="width:100%" alt="" />
                                }
                                <h4>@Model[i + 1].title</h4>

                            </div>
                        </div>
                    </div>
                </a>

                <div class="card-body">
                    <div>
                        <div class="col-sm scroll">
                            <p>@Model[i+1].header</p>
                        </div>
                        <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#demo">Описание тура</button>
                        <div id="demo" class="collapse">
                            @Model[i + 1].description
                        </div>
                    </div>
                </div>
                <div class="card-footer alert-light">
                    <div class="row">
                        <div class="col-6">
                            Дата начала : @Model[i + 1].periodStart.ToShortDateString()
                        </div>
                        <div class="col-3">
                            <text class="text-nowrap">Цена от @Model[i+1].minPrice рублей</text>

                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>


}