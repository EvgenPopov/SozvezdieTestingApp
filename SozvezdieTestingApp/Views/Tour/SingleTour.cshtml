@model TourInformation




<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>

</head>
<body>






    <div class="card">
        <div class="card-header">@Model.title</div>
        <div class="card-body">
            <img src=@Model.photoCard.thumbnail style="width:100%" />
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6">
                    Дата начала : @Model.periodStart.ToShortDateString()
                </div>
                <div class="col-3">
                    <text class="text-nowrap">Цена от @Model.minPrice рублей</text>

                </div>

            </div>
        </div>
    </div>


    <div class="card">

        <div class="card-header">Маршрут</div>
        <div class="card-body">

            @foreach (var item in Model.route)
            {
                <div class="media border">
                    <H4>↓</H4>
                    <div class="media-body bg-light">
                        <h4>@item</h4>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <h3>Описание тура</h3>
            <h4>@Model.description</h4>


        </div>


    </div>





    <footer>
        
        <div class="col-xl-12">
            <div id="demo" class="carousel slide" data-ride="carousel">

                <ul class="carousel-indicators">
                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < Model.photoAlbum.Count; i++)
                    {

                        <li data-target="#demo" data-slide-to="i"></li>
                    }


                </ul>

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src=@Model.photoAlbum[0].photo alt="Los " width="1100" height="500">
                    </div>
                    @for (int i = 1; i < Model.photoAlbum.Count; i++)
                    {
                        <div class="carousel-item">
                            <img src=@Model.photoAlbum[i].photo alt="" width="1100" height="500">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#demo" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
        </div>
    </footer>

</body>
</html>





